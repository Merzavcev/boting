doctype html
html(lang="ru")
    head
        title=pageTitle
        link(href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300&subset=latin,cyrillic', rel='stylesheet', type='text/css')
        link(href="/css/styles.css", rel="stylesheet")
        link(href="/css/owl.carousel.css", rel="stylesheet")
        link(href="/css/owl.theme.css", rel="stylesheet")
        link(href="/favicon.ico", rel="shortcut icon")
    body
        div.wrapper
            .line.rel.promo
                .logo
                .big-phone= phone
            nav.line
                ul.main-menu
                    each item in menuItems
                        if item.active
                             li.main-menu__item.main-menu__item_active: a(href= item.href)= item.title
                        else
                            li.main-menu__item
                                a(href= item.href)= item.title
                                if item.nested
                                    ul.sub-menu
                                        each subItem in item.nested
                                            li.sub-menu__item: a(href= subItem.href)= subItem.title

            article.line.content
                block content

            .line.red-line

        script(src='//yastatic.net/jquery/2.1.0/jquery.min.js')
        script(src='/js/vendor/owl.carousel.min.js')
        script(src='/js/scripts.js')